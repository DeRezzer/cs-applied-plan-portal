{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "curly": ["error", "multi-or-nest", "consistent"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "max-len": ["warn"],
    "no-console": ["error", {
      "allow": ["warn", "error"]
    }],
    "prefer-arrow-callback": ["warn"],
    "quotes": ["warn", "single", {
      "avoidEscape": true,
      "allowTemplateLiterals": true
    }],
    "semi": ["error", "always"]
  }
}
